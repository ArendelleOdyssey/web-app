{
  "name": "ao-web-app",
  "private": true,
  "version": "1.5.0",
  "description": "Website application for Arendelle Odyssey",
  "main": "app.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "build": {
    "appId": "com.arendelleodyssey.webapp",
    "productName": "Arendelle Odyssey (Web App)",
    "copyright": "${author}",
    "artifactName": "${name}-setup-${version}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "ArendelleOdyssey",
        "repo": "web-app"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.png",
      "darkModeSupport": true,
      "target": "dmg",
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "${author} - Arendelle Odyssey",
      "icon": "build/icon.png",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icon.png",
      "publish": [
        "github"
      ]
    }
  },
  "author": {
    "name": "Greep",
    "email": "89matt89.md@gmail.com",
    "url": "https://greep.cf/"
  },
  "license": "none",
  "devDependencies": {
    "electron": "^10.3.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "@treverix/custom-electron-titlebar": "^4.1.6",
    "@treverix/remote": "^0.1.1",
    "electron-updater": "^4.3.5",
    "ping": "^0.3.0"
  }
}
